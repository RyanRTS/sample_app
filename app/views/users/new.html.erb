<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
    
      <%= f.label :name %> <br>
      <%= f.text_field :name, class: 'form_control' %><br>
      
      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form_control' %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form_control' %><br>

      <%= f.label :password_confirmation, "Confirmation" %><br>
      <%= f.password_field :password_confirmation, class: 'form_control' %><br>

      <%= f.submit "Create my account", class: "btn btn-primary" %><br>
    <% end %>
    
    <p>Already have an account? <%= link_to "Sign in here", login_path %></p>
  </div>
  
</div>
